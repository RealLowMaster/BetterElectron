{
  "name": "better-electron",
  "version": "1.0.0",
  "description": "a Better Version of Electron.js with functions that all apps needed!",
  "main": "index.js",
  "author": "RealLowMaster",
  "private": false,
  "keywords": [
    "better-electron",
    "betterelectron",
    "electronjs",
    "npm",
    "nodejs",
    "database",
    "desktop",
    "framework",
    "ui-component"
  ],
  "build": {
    "appId": "me.lowmaster.app_name",
    "productName": "APP_NAME",
    "copyright": "Copyright Â© 2024 LowMaster",
    "compression": "maximum",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.tools",
      "target": [
        "dmg"
      ],
      "icon": "image/favicon.icns"
    },
    "dmg": {
      "icon": "image/favicon.icns",
      "iconSize": 100,
      "window": {
        "width": 544,
        "height": 408
      },
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "image/favicon-32x32.png"
    },
    "win": {
      "target": "NSIS",
      "publisherName": "LowMaster",
      "icon": "image/favicon.ico"
    },
    "asar": true,
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "scripts": {
    "run": "electron .",
    "test": "node ./test",
    "compile-app": "electron-builder",
    "release": "node ./LE/ReleaseApp.js",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "compile": "node ./BettterElectron/compile.js"
  },
  "repository": "https://github.com/RealLowMaster/BetterElectron",
  "bugs": "https://github.com/RealLowMaster/BetterElectron/issues",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "request-light": "^0.8.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^22.3.27"
  }
}
